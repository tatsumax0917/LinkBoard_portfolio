<!DOCTYPE html>
<html>
  <head>
    <%= display_meta_tags(@default_meta_tags || default_meta_tags) %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <%= favicon_link_tag 'favicon32.png' %>
    <!-- iOS Icons -->
    <link rel="apple-touch-icon" sizes="152x152" href="<%= asset_path('home_shortcut152.png') %>">
    <link rel="apple-touch-icon" sizes="167x167" href="<%= asset_path('home_shortcut167.png') %>">
    <link rel="apple-touch-icon" sizes="180x180" href="<%= asset_path('home_shortcut180.png') %>">

    <!-- Android Chrome Icons -->
    <link rel="icon" sizes="192x192" href="<%= asset_path('home_shortcut192.png') %>">
    <link rel="icon" sizes="512x512" href="<%= asset_path('home_shortcut512.png') %>">
    <meta name="google-site-verification" content="6A2fVVAYhShJ-O7HjtKbO9-J9daNvM2jP6e9IwL2Ks4" />
  </head>
  <body>
    <%= render 'shared/header' %>
    <%= yield %>

  <script src="https://cdn.jsdelivr.net/npm/cropperjs@1.6.2/dist/cropper.min.js"></script>
  <script type="module" src="<%= asset_path('controllers/cropper_controller.js') %>"></script>
  </body>
</html>
